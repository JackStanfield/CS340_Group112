<h2>Add Wizard </h2>

<form class="cuForm" action="#" method="post">
  <label for="wizardName">Wizard Name:</label>
  <input type="text" id="wizardName" name="wizardName" required>

  <label for="beardLengthCm">Beard Length (cm):</label>
  <input type="number" id="beardLengthCm" name="beardLengthCm" min="0">

  <label for="wizardAge">Wizard Age:</label>
  <input type="number" id="wizardAge" name="wizardAge" min="0">

  <label for="masterID">Master :</label>
  <select id="masterID" name="masterID">
    <option value="">None</option>
    <option value="1">1 - Reginald Stringly</option>
    <option value="2">2 - Hurckle</option>
    <option value="3">3 - The Dark Lord</option>
  </select>

  <button type="submit">Add Wizard</button>
</form>


<h2>Update Wizard </h2>

<form class="cuForm" action="#" method="post">
  <label for="updateWizardID">Wizard to Update:</label>
  <select id="updateWizardID" name="wizardID" required>
    <option value="" disabled selected>Select wizard</option>
    <option value="1">1 - Reginald Stringly</option>
    <option value="2">2 - Hurckle</option>
    <option value="3">3 - The Dark Lord</option>
  </select>

  <label for="updateWizardName">New Wizard Name:</label>
  <input type="text" id="updateWizardName" name="wizardName">

  <label for="updateBeardLengthCm">New Beard Length (cm):</label>
  <input type="number" id="updateBeardLengthCm" name="beardLengthCm" min="0">

  <label for="updateWizardAge">New Wizard Age:</label>
  <input type="number" id="updateWizardAge" name="wizardAge" min="0">

  <label for="updateMasterID">New Master:</label>
  <select id="updateMasterID" name="masterID">
    <option value="">None</option>
    <option value="1">1 - Reginald Stringly</option>
    <option value="2">2 - Hurckle</option>
    <option value="3">3 - The Dark Lord</option>
  </select>

  <button type="submit">Update Wizard</button>
</form>


